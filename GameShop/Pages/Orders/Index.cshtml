@page
@using GameShop.Models.Utils
@using Microsoft.AspNetCore.Mvc.TagHelpers
@using GameShop.Models.Entity
@model GameShop.Pages.Orders.IndexModel

@{
    ViewData["Title"] = "Мої замовлення";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Мої замовлення</h1>


<table class="table">
    <thead>
        <tr>
            <th>
                Дата Замовлення
            </th>
            <th>
                Кому
            </th>
            <th>
                Номер телефону
            </th>
            <th>
                Адреса
            </th>
            <th>
                Статус
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Orders) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.OrderDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ToName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ToTelno)
            </td>
           
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                @item.OrderStatus.Name()
            </td>
          
            <td>
                <a asp-page="./Details" asp-route-id="@item.Id">Деталі</a> |
                 @if (item.OrderStatus == OrderStatus.CREATED)
                 {
                     <a asp-page="./Delete" asp-route-id="@item.Id">Скасувати</a>
                 }
            </td>
        </tr>
}
    </tbody>
</table>
