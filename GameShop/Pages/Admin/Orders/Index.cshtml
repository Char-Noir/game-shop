@page
@using GameShop.Models.Utils
@using Microsoft.AspNetCore.Mvc.TagHelpers
@model GameShop.Pages.Admin.Orders.IndexModel

@{
    ViewData["Title"] = "Замовлення";
}

<h1>Замовлення</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                Дата Замовлення
            </th>
            <th>
                Кому
            </th>
            <th>
                Номер телефону
            </th>
            <th>
                Адреса
            </th>
            <th>
                Статус
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Orders) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.OrderDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ToName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ToTelno)
            </td>
           
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                @item.OrderStatus.Name()
            </td>
          
            <td>
                <a asp-page="./Details" asp-route-id="@item.Id">Деталі</a>
            </td>
        </tr>
}
    </tbody>
</table>

