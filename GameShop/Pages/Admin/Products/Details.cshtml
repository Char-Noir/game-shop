@page
@model GameShop.Pages.Admin.Products.DetailsModel

@{
    ViewData["Title"] = @Model.Product;
}

<h1>Деталі</h1>

<div>
    <h4>Товар</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Назва:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Product.ProductName)
        </dd>
        <dt class="col-sm-2">
            Ціна:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Product.ProductPrice)
        </dd>
        <dt class="col-sm-2">
           Опис:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Product.ProductDescription)
        </dd>
        <dt class="col-sm-2">
           Довжина:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Product.GameDuration)
        </dd>
        <dt class="col-sm-2">
            Вік:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Product.Age)
        </dd>
        <dt class="col-sm-2">
            Кількість гравців:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Product.NumOfPlayers)
        </dd>
        <dt class="col-sm-2">
            Мова:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Product.Localisation)
        </dd>
        <dt class="col-sm-2">
           Опис складу:
        </dt>
        <dd class="col-sm-10">
            @Html.Raw(Model.Product.PackageList)
        </dd>
        <dt class="col-sm-2">
            Коротка адреса
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Product.Url)
        </dd>
        <dt class="col-sm-2">
            Зображення
        </dt>
        <dd class="col-sm-10">
            <img  src="/images/games/@Model.Product.ProductImage"/>
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Product?.Id">Редагувати</a> |
    <a asp-page="./Index">Повернутися</a>
</div>
